<div class="container">
	<div class="row clearfix">
		<div class="col-md-8 col-md-offset-2">

		<% if(flash && flash.err) { %>
		<ul class="alert alert-success">
			<% Object.keys(flash.err).forEach(function(error){ %>
			<li> <%- JSON.stringify(flash.err[error]) %></li>
			<% }) %>
		</ul>
		<% } %>
		
			<legend><h2>Agregar Información de un Giro</h2></legend>
			<div class="jumbotron" >
				<form role="form" action="/giro/create" method="POST">
					<div class="row">
						<div class="col-xs-4">
							<label for="codigo">Codigo/Referencia</label>
						</div>
						<div class="form-group col-md-4">
							<input type="text" class="form-control" id="codigo" name="codigo" required/>

						</div>
						
						
					</div>
					
					<div class="row">
						<div class="col-xs-4">
							<label for="fecha">Fecha Envío</label>
						</div>
						<div class="col-xs-4">
							<input type="datetime-local" class="form-control" id="fecha" name="fecha" required/>
						</div>
					</div>
					
					<div class="row">
						<div class="col-xs-4">
							<label for="valor">Valor Enviado</label>
						</div>
						<div class="col-xs-4">
							<input type="number" class="form-control" id="valor" name="valor" required/>
						</div>
						
					</div>
					
					
					
					<div class="row">
					<div class="col-xs-4">
						<label for="description">Descripción</label>
					</div>
					<div class="col-xs-8">
						<textarea type="text" class="form-control" id="descripcion" name="descripcion" rows="2" style="resize: none"> </textarea>
					</div>
					<br><br>
					<button type="submit" class="btn btn-success btn-lg  pull-right" >Enviar</button>
					<br>
					</div>
					
				</form>
			</div>
		</div>
	</div>
</div>