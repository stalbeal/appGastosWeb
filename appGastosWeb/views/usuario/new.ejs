
<div class="container">
	<form action="/usuario/create" method="POST" class="form-signin">
		<% if(flash && flash.err) { %>
		<ul class="alert alert-success">
			<% Object.keys(flash.err).forEach(function(error){ %>
			<li> <%- JSON.stringify(flash.err[error]) %></li>
			<% }) %>
		</ul>
		<% } %>
		<div class="form-group">
			<label for="user">Nombre</label>
			<input type="text" class="form-control" name="nombre" placeholder="Nombre">
		</div>
		<div class="form-group">
			<label for="user">Usuario</label>
			<input type="text" class="form-control" name="usuario" placeholder="Usuario">
		</div>
		<div class="form-group">
			<label for="type">Tipo</label>
			<input type="text" class="form-control" name="tipo" placeholder="Nombre">
		</div>
		<div class="form-group">
			<label for="psw">Contraseña</label>
			<input type="password" class="form-control" name="contraseña" placeholder="Contraseña">
		</div>
		<div class="form-group">
			<label for="type">Confirmacion Contraseña</label>
			<input type="password" class="form-control" name="confirmacionContrasena" placeholder="Confirmar Contraseña">
		</div>
		<br>
		<button type="submit" class="btn btn-success btn-lg  pull-right" >Guardar</button>
		<input type="hidden" value="<%= _csrf %>">
		<br><br>
	</form>
</div>