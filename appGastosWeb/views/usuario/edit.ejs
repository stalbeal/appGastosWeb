	<legend><h2>Editar Usuario</h2></legend>
	<form action="/usuario/update/<%usuario.id%>" method="POST" class="form-signin">
		<% if(flash && flash.err) { %>
		<ul class="alert alert-success">
			<% Object.keys(flash.err).forEach(function(error){ %>
			<li> <%- JSON.stringify(flash.err[error]) %></li>
			<% }) %>
		</ul>
		<% } %>
		<div class="form-group">
			<label for="user">Nombre</label>
			<input type="text" class="form-control" name="nombre" value="<%=usuario.nombre%>">
		</div>
		<div class="form-group">
			<label for="user">Usuario</label>
			<input type="text" class="form-control" name="usuario" value="<%=usuario.usuario%>">
		</div>
		<div class="form-group">
			<label for="type">Tipo</label>
			<input type="text" class="form-control" name="tipo" value="<%=usuario.tipo%>">
		</div>
		<div class="form-group">
			<label for="psw">Contrase単a</label>
			<input type="password" class="form-control" name="contrase単a" value="<%=usuario.contrase単a%>">
		</div>
		<div class="form-group">
			<label for="type">Confirmacion Contrase単a</label>
			<input type="password" class="form-control" name="confirmacionContrasena" value="<%=usuario.confirmacionContrasena%>">
		</div>
		<br>
		<button type="submit" class="btn btn-success btn-lg  pull-right" >Guardar</button>
		<input type="hidden" value="<%= _csrf %>">
		<br><br>
	</form>
</div>